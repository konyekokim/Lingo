<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.konye.lingo.ui.activities.LanguageActivity"
    tools:ignore="MissingPrefix">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/inn_"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/app_linear_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_text_view"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="Your Progress"
            android:textAlignment="center"
            android:textColor="#E0E0E0"
            android:textSize="18sp" />

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/lang_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            app:rcBackgroundColor="#E0E0E0"
            app:rcBackgroundPadding="0.2dp"
            app:rcMax="100"
            app:rcProgress="10"
            app:rcProgressColor="#FC7900"
            app:rcRadius="4dp"
            app:rcReverse="false"
            app:rcSecondaryProgress="0"
            app:rcSecondaryProgressColor="#FC7900" />

    </LinearLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_linear_view"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        app:tabIndicatorColor="#ffffff"
        app:tabSelectedTextColor="#FC7900"
        app:tabTextColor="#E0E0E0" />

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tab_layout"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:background="#E0E0E0" />

    <android.support.v4.view.ViewPager
        android:id="@+id/slide_video_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_view" />


</RelativeLayout>
