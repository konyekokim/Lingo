<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeline_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.konye.lingo.LanguageHomeActivity"
    tools:showIn="@layout/activity_language_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/you_are_learning"
            android:src="@drawable/learn"
            android:layout_marginTop="70dp"/>

        <ImageView
            android:id="@+id/name_of_language"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/you_are_learning"
            android:layout_centerHorizontal="true"
            android:src="@drawable/yor" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/progress_textView"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:text = "Tap to see your progress"
                android:background="@drawable/progress_circle"/>

            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:id="@+id/language_progress_circle"
                app:max="100"
                app:ringColor="#00ffffff"
                app:ringProgressColor="#e0e0e0"
                app:ringWidth="2dp"
                app:style="STROKE"
                app:textColor="#ffffff"
                app:textIsShow="false"
                app:textSize="16sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginStart="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/stage_1_textView"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="1"
                android:background="@drawable/circle_in_progress"/>

            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:id="@+id/stage_1_progress_circle"
                android:layout_centerInParent="true"
                app:max="100"
                app:ringColor="#00ffffff"
                app:ringProgressColor="#e0e0e0"
                app:ringWidth="2dp"
                app:style="STROKE"
                app:textColor="#ffffff"
                app:textIsShow="false"
                app:textSize="16sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/stage_2_textView"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="2"
                android:background="@drawable/circle_green"/>

            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_centerInParent="true"
                android:id="@+id/stage_2_progress_circle"
                app:max="100"
                app:ringColor="#00ffffff"
                app:ringProgressColor="#e0e0e0"
                app:ringWidth="2dp"
                app:style="STROKE"
                app:textColor="#ffffff"
                app:textIsShow="false"
                app:textSize="16sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/stage_3_textView"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="3"
                android:background="@drawable/circle_empty"/>

            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_centerInParent="true"
                android:id="@+id/stage_3_progress_circle"
                app:max="100"
                app:ringColor="#00ffffff"
                app:ringProgressColor="#ffffff"
                app:ringWidth="2dp"
                app:style="STROKE"
                app:textColor="#ccffffff"
                app:textIsShow="false"
                app:textSize="16sp"/>

        </RelativeLayout>


    </RelativeLayout>

    <ListView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:id="@+id/left_drawer"
        android:background="#E0E0E0"
        android:alpha="0.9"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


    </ListView>
    
</android.support.v4.widget.DrawerLayout>
