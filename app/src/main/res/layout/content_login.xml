<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context="com.example.konye.lingo.LoginActivity"
    tools:showIn="@layout/activity_login"
    tools:ignore="MissingPrefix">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/app_icon"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="100dp"
        android:paddingTop="18dp"
        android:paddingRight="18dp"
        android:paddingLeft="18dp"
        android:paddingBottom="18dp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/curved_rectangle"
        android:id="@+id/login_email_editView"
        fontPath="Montserrat-Regular.ttf"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:paddingTop="18dp"
        android:paddingRight="18dp"
        android:paddingLeft="18dp"
        android:paddingBottom="18dp"
        android:id="@+id/login_password_editView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/curved_rectangle"
        android:maxLines="1"
        fontPath="Montserrat-Regular.ttf"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/login_button"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/crvd_login_butn_rect"
        android:layout_gravity="center_horizontal"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:stateListAnimator="@null"
        fontPath="montserrat_bold.otf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do not have an account?"
            fontPath="Montserrat-Regular.ttf"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#BF360C"
            android:id="@+id/sign_up_textVIew"
            fontPath="montserrat_bold.otf"/>

    </LinearLayout>

</LinearLayout>
