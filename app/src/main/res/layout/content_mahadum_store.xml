<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.konye.lingo.StoreActivity"
    tools:showIn="@layout/activity_store"
    tools:ignore="MissingPrefix">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:tabIndicatorColor="#00ffffff"
        app:tabTextColor="#E0E0E0"
        app:tabSelectedTextColor="#FC7900"
        fontPath="Montserrat-Regular.ttf"/>

    <View
        android:layout_height="0.8dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="#eeeeee"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/books_videos_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>

</LinearLayout>
