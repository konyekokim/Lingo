<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_store">

    <View
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"/>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/store_first_book_pager"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:tabIndicatorColor="#00ffffff"
                app:tabTextColor="#E0E0E0"
                app:tabSelectedTextColor="#FC7900"/>

            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="#eeeeee"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/store_books_pager"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Browse Categories"
                android:id="@+id/browse_categories"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                android:textColor="#9e9e9e"/>

            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="#eeeeee"
                android:layout_marginTop="30dp"
                android:id="@+id/view_below_browseCategories" />

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/browse_categories_pager" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Spelling Books"
                android:id="@+id/spelling_books"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                android:textColor="#9e9e9e" />

            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:id="@+id/view_below_spellingBooks"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:background="#eeeeee"
                android:visibility="gone"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spelling_books_layout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="35dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:id="@+id/spelling_books_first_img"
                    android:src="@drawable/book1"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/spelling_books_second_img"
                    android:src="@drawable/book2"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/spelling_books_third_img"
                    android:src="@drawable/book3"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/shelf"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-12dp" />
        </LinearLayout>



    </ScrollView>

</LinearLayout>



