<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.konye.lingo.ui.activities.VideoActivity"
    tools:ignore="MissingPrefix"
    tools:showIn="@layout/activity_video">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:ignore="MissingPrefix">

        <ImageView
            android:id="@+id/book_img_view"
            android:layout_width="115dp"
            android:layout_height="190dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/book3" />

        <ImageView
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="63.5dp"
            android:src="@drawable/video_play_button" />

        <TextView
            android:id="@+id/name_of_book"
            fontPath="fonts/montserrat_bold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/book_img_view"
            android:text="Making Things Happen"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_of_author"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_of_book"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/book_img_view"
            android:text="Elizabeth Murphy"
            android:textColor="#bdbdbd"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/price_textView"
            fontPath="fonts/montserrat_bold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_of_author"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/book_img_view"
            android:text="N 1,500"
            android:textColor="#000000" />

        <View
            android:id="@+id/book_line_view"
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_below="@+id/price_textView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/book_img_view"
            android:background="#9e9e9e" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="170dp"
            android:src="@drawable/shelf" />

        <Button
            android:id="@+id/preview_button"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/book_line_view"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/book_img_view"
            android:background="@drawable/crvd_trsprnt_prev_butn"
            android:text="Preview"
            android:textAllCaps="false"
            android:textColor="#FC7900" />

        <Button
            android:id="@+id/purchase_button"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/preview_button"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/book_img_view"
            android:background="@drawable/crvd_purch_butn_rect"
            android:text="Purchase"
            android:textAllCaps="false"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <TextView
        fontPath="fonts/montserrat_bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="Details"
        android:textColor="#000000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/details_textView"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="5dp"
        android:columnWidth="120dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" />

</LinearLayout>
