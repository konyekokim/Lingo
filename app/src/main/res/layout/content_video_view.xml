                fdlkbfg akfg  flngkhas;lf ng;salkfg  jdhfljsbjt rjlsj gsmf,g oslmfg ljsffmmbgslj rgbb .sf go
                fhkdgnhddk;gn d ghn;dgh d gh;ldng. h;dgnhd.,n;dknfhkdknfhm fnglkdlfm f bljhfgm flgbadmfg dmff glf
                 fdhndngh dlkfn  dflkfnbldkfgklrpieutipr ritwlrt  sldnlkfhg s rjtblrbt rr t ljg,msf g,fbglbsfgllmb
                ;kjhd,ghj  gkf;n df;kngr rktwnrt wpirtn;g bndlbnlknhd flkhdng;hlksd,.m sljfhgljrbg lrg slfg sljjfbgs "
                android:textAlignment="center"
                android:textColor="#9E9E9E"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/more_videos_text_view"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="More Videos"
                    android:textAlignment="center"
                    android:textColor="#BDBDBD" />

                <ImageButton
                    android:id="@+id/expand_buttn_more_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="61dp"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_keyboard_arrow_down_black_24dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/more_vids_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/more_video_1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/vid_1" />

                <ImageView
                    android:id="@+id/more_video_2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/vid_2" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>




