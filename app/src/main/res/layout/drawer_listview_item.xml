<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:background="@drawable/drawer_list_bg"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="40dp"
        android:textColor="#9e9e9e"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="add Language"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_progress_textView"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:text="45%"
        android:textSize="15dp"
        android:textColor="#fc7900"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"/>


    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:id="@+id/home_drawer_progress_bar"
        android:layout_below="@+id/text1"
        android:layout_marginTop="18dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:rcProgress="10"
        app:rcSecondaryProgress="0"
        app:rcMax="100"
        app:rcRadius="6dp"
        app:rcBackgroundPadding="0.2dp"
        app:rcReverse="false"
        app:rcProgressColor="#FC7900"
        app:rcSecondaryProgressColor="#FC7900"
        app:rcBackgroundColor="#E0E0E0" />


</RelativeLayout>

























































































































































































































































































